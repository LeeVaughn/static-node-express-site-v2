extends layout.pug

block content
  nav.nav
    a(href='/')
      span &larr;
      |  Back
  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1= projects[id].project_name
        p= projects[id].description
      .project-tech-links-box.box
        h6 Technologies
        ul
          //- loops over each item in the technology property
          each tech in projects[id].technologies
            li= tech
        a.btn-link(href=projects[id].live_link, target="_blank") Live Demo
        a.btn-link(href=projects[id].github_link, target="_blank") GitHub Repo
    .project-img-box.box
      //- loops over each image in the image_urls property
      each image in projects[id].image_urls
        img.project-img(src=image)
    nav.nav
      a(href='/')
        span &larr;
        |  Back